{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "lib": [
      "es2018",
      "dom"
    ],
    "listFiles": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "pretty": true,
    "rootDir": "./src",
    "strict": true,
    "target": "es2018",
    "traceResolution": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "typings/**/*.ts"
  ]
}